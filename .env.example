DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your_password_here
DATABASE_NAME=stock_db
DATABASE_SYNC=true #  生产环境需要改成false

# Prisma database connection URL (for local development)
DATABASE_URL="postgresql://postgres:your_password_here@localhost:5432/stock_db?schema=public"

# JWT配置
JWT_SECRET=your_jwt_secret_here_32_characters_long

# HTTPS配置
# 服务器端口配置
PORT=3001

# SSL证书路径配置（相对于项目根目录）
SSL_KEY_PATH=certs/key.pem
SSL_CERT_PATH=certs/cert.pem

# 是否启用HTTPS（开发环境可选，生产环境建议启用）
ENABLE_HTTPS=true

# ========== AI 配置 ==========
# 模型供应商：deepseek | ollama
AI_PROVIDER=deepseek
# DeepSeek API Key（仅当 AI_PROVIDER=deepseek 时需要）
DEEPSEEK_API_KEY=your_deepseek_api_key_here
# DeepSeek API Base（可选，默认 https://api.deepseek.com）
DEEPSEEK_API_BASE=https://api.deepseek.com
# 默认模型（用户已确认 deepseek-chat）
AI_MODEL=deepseek-chat

# ========== LangSmith 配置 ==========
# LangChain 追踪功能开关（可选，开启后可观测 AI 对话流程）
LANGSMITH_TRACING=true
# LangSmith API Key（从 https://smith.langchain.com 获取）
LANGSMITH_API_KEY=lsv2_pt_your_key_here
# LangSmith API 端点（默认为官方端点）
LANGSMITH_ENDPOINT=https://api.smith.langchain.com
# LangSmith 项目名称（用于组织 traces）
LANGSMITH_PROJECT=stock-system
